<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#225A85</item>
        <item name="colorPrimaryDark">#194F75</item>
        <item name="colorAccent">#FFFFFF</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="MySwitch" parent="@style/Widget.AppCompat.CompoundButton.Switch">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
        <item name="android:textColorPrimaryDisableOnly">#387FCC</item>
        <item name="android:colorControlActivated">#387FCC</item>
        <item name="android:colorForeground">#2876D3</item>
    </style>
</resources>
